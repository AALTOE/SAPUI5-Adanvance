<mvc:View
    controllerName="logaligroup.logali.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <HBox id="box1">
                <Label
                    id="labelEmployee"
                    labelFor="inputEmployee"
                    text="{i18n>labelEmployee}"
                    class="sapUiSmallMargin"
                />
                <Input
                    id="inputEmployee"
                    value="{/EmployeeId}"
                    maxLength="6"
                    width="200px"
                    class="sapUiSmallMarginEnd"
                />

                <Label
                    id="labelCountry"
                    labelFor="slCountry"
                    text="{i18n>labelCountry}"
                    class="sapUiSmallMargin"
                    visible="true"
                />

                <Select
                    id="slCountry"
                    selectedKey="{/CountryKey}"
                    forceSelection="false"
                    items="{/ListCountry}"
                    visible="true"
                >
                    <items>
                        <core:Item
                            key="{Key}"
                            text="{Text}"
                        />
                    </items>
                </Select>
                <Button
                    id="btnFilter"
                    text="{i18n>btnFilter}"
                    icon="sap-icon://search"
                    press="onFilter"
                    class="sapUiSmallMarginEnd"
                />
                <Button
                    id="btnClearFilter"
                    text="{i18n>btnClearFilter}"
                    icon="sap-icon://sap-icon://clear-filter"
                    press="onClearFilter"
                    class="sapUiSmallMarginEnd"
                />
            </HBox>

            <HBox id="hbox2">
                <Panel id="panel1">
                    <Table
                        id="tableEmployee"
                        items="{/Employees}"
                    >
                        <columns>
                            <Column id="tableid">
                                <header>
                                    <Label
                                        id="textid"
                                        text="{i18n>tableId}"
                                    />
                                </header>
                            </Column>
                            <Column id="tableName">
                                <header>
                                    <Label
                                        id="texName"
                                        text="{i18n>tableName}"
                                    />
                                </header>
                            </Column>
                            <Column id="tableCountry">
                                <header>
                                    <Label
                                        id="texCountry"
                                        text="{i18n>tableCountry}"
                                    />
                                </header>
                            </Column>
                            <Column id="tableCity">
                                <header>
                                    <Label
                                        id="texCity"
                                        text="{i18n>tableCity}"
                                    />
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="list1" type="Navigation" press="showPostalCode">
                                <cells>
                                    <Label
                                        id="labelID"
                                        text="{EmployeeID}"
                                    />
                                    <Label
                                        id="labelName"
                                        text="{LastName} {FirstName}"
                                    />
                                    <Label
                                        id="labelCountry2"
                                        text="{Country}"
                                    />
                                    <Label
                                        id="labelCity"
                                        text="{City}"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </Panel>
            </HBox>
        </content>
    </Page>
</mvc:View>
