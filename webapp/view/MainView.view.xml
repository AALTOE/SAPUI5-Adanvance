<mvc:View
    controllerName="logaligroup.logali.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <HBox id="box1">
                <Label
                    id="labelEmployee"
                    labelFor="inputEmployee"
                    text="{i18n>labelEmployee}"
                    class="sapUiSmallMargin"
                />
                <Input
                    id="inputEmployee"
                    value="{jsonCountries>/EmployeeId}"
                    maxLength="6"
                    width="200px"
                    class="sapUiSmallMarginEnd"
                />

                <Label
                    id="labelCountry"
                    labelFor="slCountry"
                    text="{i18n>labelCountry}"
                    class="sapUiSmallMargin"
                    visible="true"
                />

                <Select
                    id="slCountry"
                    selectedKey="{jsonCountries>/CountryKey}"
                    forceSelection="false"
                    items="{jsonCountries>/ListCountry}"
                    visible="true"
                >
                    <items>
                        <core:Item
                            key="{jsonCountries>Key}"
                            text="{jsonCountries>Text}"
                        />
                    </items>
                </Select>
                <Button
                    id="btnFilter"
                    text="{i18n>btnFilter}"
                    icon="sap-icon://search"
                    press="onFilter"
                    class="sapUiSmallMarginEnd"
                />
                <Button
                    id="btnClearFilter"
                    text="{i18n>btnClearFilter}"
                    icon="sap-icon://sap-icon://clear-filter"
                    press="onClearFilter"
                    class="sapUiSmallMarginEnd"
                />
            </HBox>

            <HBox id="hbox2">
                <Panel id="panel1">
                    <Button id="btnShowCity" 
                            text="{i18n>showcity}"
                            visible="{jsonCounfig>/visibleBtnShowCity}"
                            press="onShowCity"/>
                    <Button id="btnHideCity" 
                            text="{i18n>hidecity}"
                            visible="{jsonCounfig>/visibleBtnHideCity}"
                            press="onHideCity"/>       
                    <Table
                        id="tableEmployee"
                        items="{jsonEmployees>/Employees}"
                    >
                        <columns>
                            <Column visible="{jsonCounfig>/visibleID}">
                                <header>
                                    <Label
                                        id="textid"
                                        text="{i18n>tableId}"
                                    />
                                </header>
                            </Column>
                            <Column visible="{jsonCounfig>/visibleName}">
                                <header>
                                    <Label
                                        id="texName"
                                        text="{i18n>tableName}"
                                    />
                                </header>
                            </Column>
                            <Column visible="{jsonCounfig>/visibleCountry}">
                                <header>
                                    <Label
                                        id="texCountry"
                                        text="{i18n>tableCountry}"
                                    />
                                </header>
                            </Column>
                            <Column visible="{jsonCounfig>/visibleCity}">
                                <header>
                                    <Label
                                        id="texCity"
                                        text="{i18n>tableCity}"
                                    />
                                </header>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem
                                id="list1"
                                type="Navigation"
                                press="showOrders"
                            >
                                <cells>
                                    <Label
                                        id="labelID"
                                        text="{jsonEmployees>EmployeeID}"
                                    />
                                    <Label
                                        id="labelName"
                                        text="{jsonEmployees>LastName} {jsonEmployees>FirstName}"
                                    />
                                    <Label
                                        id="labelCountry2"
                                        text="{jsonEmployees>Country}"
                                    />
                                    <Label
                                        id="labelCity"
                                        text="{jsonEmployees>City}"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                    <HBox id="ordersTable"></HBox>
                </Panel>
            </HBox>
        </content>
    </Page>
</mvc:View>
